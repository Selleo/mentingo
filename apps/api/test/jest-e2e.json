{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "globalSetup": "<rootDir>/test/global-setup.ts",
  "setupFilesAfterEnv": [
    "<rootDir>/test/jest-e2e-setup.ts"
  ],
  "verbose": true,
  "testTimeout": 30000,
  "maxWorkers": 1,
  "forceExit": true
}
